<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/goProDialogImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/closeAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/closead"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="top|right"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

      <Button
          android:id="@+id/btnknowMore"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text=""
          android:drawableLeft="@android:drawable/ic_dialog_info"
          android:drawableTint="#E10808"
          android:textSize="10sp"
          />
        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableLeft="@drawable/ic_call"
            android:drawableTint="#F4791A"
            android:text=""/>
        <Button
            android:id="@+id/btnWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableLeft="@drawable/whatsapp"
            android:text=""/>
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableLeft="@drawable/closead"
            android:text=""/>
    </LinearLayout>


</FrameLayout>
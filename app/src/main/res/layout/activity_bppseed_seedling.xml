<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#71d687"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fitsSystemWindows="true"

                >
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        app:title="@string/Seed_and_Seedlings"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                </android.support.design.widget.AppBarLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/Cereal"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_border"
                            android:onClick="onClickCereal"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Pulses"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_border"
                            android:onClick="onClickPulse"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Oilseed"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_border"
                            android:onClick="onClickOilseed"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Spices"
                            android:layout_margin="5dp"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_border"
                            android:onClick="onClickSpices"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Vegetable"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_border"
                        android:onClick="onClickVegetable"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Flower"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_border"
                        android:onClick="onClickFlower"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Fodder"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_border"
                        android:onClick="onClickFodder"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Cotton"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_border"
                        android:onClick="onClickCotton"/>
                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>

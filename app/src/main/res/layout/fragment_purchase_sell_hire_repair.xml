<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:background="#71d687"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.odishakrushi.Fragments.Ask">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/roundedcorner"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_purchase"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Purchase"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedcorneryblue2"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/id_sale"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_sale"
                    android:scaleType="fitXY"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Sale"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#fff"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedcornergreen"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_hire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_hire"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Hire"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornerpurple"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/id_repair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REPAIR"
                android:gravity="center"
                app:srcCompat="@drawable/ic_repair"
                android:textColor="#fff"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Repair"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/roundedcornerpeace"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SERVICES"
                android:gravity="center"
                app:srcCompat="@drawable/ic_service"
                android:textColor="#fff"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Services"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/image_ad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"/>
    </LinearLayout>

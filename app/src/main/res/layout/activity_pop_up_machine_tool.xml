<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#71d687">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.odishakrushi.PopUpMachineTool"
    android:orientation="vertical"

>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/machineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#bcbcbc"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="@string/Machine_Quality"/>
        <RadioGroup
            android:id="@+id/radioMachineQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/idold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Old"
                android:textColor="#000"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/idnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="#000"

                android:textSize="18sp"/>

        </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Purchase_Year"
            android:layout_weight="1"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/purchaseyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="2017"
            android:background="@drawable/rectangle_border"
            android:textCursorDrawable="@null"
            android:maxLength="4"
            android:textColor="#000"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Make"
            android:layout_weight="1"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="2016"
            android:background="@drawable/rectangle_border"
            android:textCursorDrawable="@null"
            android:maxLength="4"
            android:textColor="#000"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Model"
                android:layout_weight="1"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/Model"
                android:background="@drawable/rectangle_border"
                android:textCursorDrawable="@null"
                android:textColor="#000"
                android:layout_weight="1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Any_Remark"
            android:layout_weight="1"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="#000"
            android:background="@drawable/rectangle_border"
            android:textCursorDrawable="@null"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Condition"
            android:layout_weight="1"
            android:textColor="#000"/>

        <Spinner
            android:id="@+id/content_spinner"
            style="@style/spinner_machine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/machinecondition"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Upload_Photo"
            android:layout_weight="1"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Select_Photo"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:background="#000"
            android:layout_weight="1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OK"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_marginRight="5dp"
                android:onClick="onClickOk"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Cancel"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:onClick="onClickCancel"/>
        </LinearLayout>
</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.odishakrushi.PopUpMachineTool"
    android:orientation="vertical"
    android:background="#71d687"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textmedicinefeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Medicine_Feed"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#bcbcbc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Medicine"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/editmedicine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="7dp"
            android:background="@drawable/rectangle_border"
            android:textColor="#000"
            android:layout_weight="1"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Medicine_for"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/editmedicinefor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:paddingLeft="7dp"
            android:background="@drawable/rectangle_border"
            android:textColor="#000"
            android:layout_weight="1"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Feed"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/editfeed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_border"
                android:hint=""
                android:paddingLeft="7dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Net"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/editnet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rectangle_border"
                android:hint=""
                android:paddingLeft="7dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:onClick="onClickOk"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:onClick="onClickCancel"/>
    </LinearLayout>
</LinearLayout>


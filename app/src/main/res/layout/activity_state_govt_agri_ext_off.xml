<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#71d687"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fitsSystemWindows="true"

                >
                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"

                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                </com.google.android.material.appbar.AppBarLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Post"
                        android:textSize="12sp"/>

                    <RadioGroup
                        android:id="@+id/rgAgrilPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Krushak Sathi"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                />

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="VAW"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mechanic"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fitter"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />


                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AAO"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BAO"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADO"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AAE"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />



                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SMS"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OTHERS"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/rectangle_border"
                            android:textSize="18sp"
                            android:paddingLeft="5dp"
                            android:hint="@string/Mention_here"/>
                    </RadioGroup>


                    <!--Farmer registration fields-->

                    <LinearLayout
                        android:id="@+id/farmerregdlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_border"
                        android:padding="10dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EXTENSION OFFICER AS FARMER"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/fathername"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:hint="FATHER'S NAME (OPTIONAL)"
                            android:background="@drawable/rectangle_border"
                            android:textSize="13sp"


                            android:singleLine="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="CASTE"/>
                        <RadioGroup
                            android:id="@+id/radioGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SC"
                                android:textSize="15sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ST"
                                android:textSize="15sp"/>
                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GENERAL"
                                android:textSize="15sp"/>

                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="Irrigated land area under cultivation"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:layout_gravity="center"
                            android:background="@drawable/rectangle_border"

                            android:textSize="15sp"

                            android:hint="area in acres"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:layout_marginTop="15dp"
                            android:text="Source Of Irrigation"/>

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dug Well"
                                android:textSize="14sp"/>


                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bore Well"
                                android:textSize="14sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="L1 Point"
                                android:textSize="14sp"/>
                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="River Lift"
                                android:textSize="14sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:textSize="14sp"/>

                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="Non irrigated Land area under cultivation"/>

                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:background="@drawable/rectangle_border"
                            android:hint="area"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:text="@string/Jurisdiction"/>

                    <EditText
                        android:id="@+id/jurisdiction"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangle_border"
                        android:paddingLeft="6dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:textSize="14sp"
                        />

                    <!--Added recently-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/Select_District"
                        android:textSize="12sp" />

                    <Spinner
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#bcbcbc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/Select_Block"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/linearMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>


                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="12sp"
                    android:text="@string/GP"/>

                     <EditText
                    android:id="@+id/gp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_border"
                    android:paddingLeft="6dp"/>






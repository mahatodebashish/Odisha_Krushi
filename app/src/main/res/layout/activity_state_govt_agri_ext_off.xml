                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:text="@string/Expertise_In"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cultivation Practise"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:onClick="onClickCP"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Soil"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:onClick="onClickSoil"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Seed"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:onClick="onClickSeed"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Fertiliser"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:onClick="onClickFertiliser"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Disease and Pest"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_margin="2dp"
                            android:onClick="onClickDiseasePest"
                            android:gravity="center"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Irrigation"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:onClick="onClickIrrigation"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Insurance"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:onClick="onClickInsurance"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Training"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:onClick="onClickTraining"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Processing"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:onClick="onClickProcessing"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Machinery and Tools"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:onClick="onClickMandTool"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Other"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:onClick="onClickOther"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:visibility="invisible"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>


                <!--ad-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/image_ad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</LinearLayout>

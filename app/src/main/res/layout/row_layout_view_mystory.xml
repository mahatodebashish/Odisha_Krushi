<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="4dp"
    android:layout_margin="6dp"
    card_view:cardCornerRadius="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:background="@drawable/shape"
        android:padding="5dp"
        android:text="Agriculture" />

    <TextView
        android:id="@+id/sub_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/category_name"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/category_name"
        android:layout_toRightOf="@+id/category_name"
        android:text="Cultivation practice"
        android:textColor="#fff"
        android:background="@drawable/shapegreen"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sub_category_name"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/sub_category_name"
        android:layout_toRightOf="@+id/sub_category_name"
        android:text="Pulses"
        android:textColor="#fff"
        android:background="@drawable/shapered"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/story_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/category_name"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="I got success in setting up own farm in my village. I also do Mushroom Cultivation and my self a veterinary doctor" />

        <TextView
            android:id="@+id/mediaUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/story_desc"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimary"
            />

</RelativeLayout>
</androidx.cardview.widget.CardView>
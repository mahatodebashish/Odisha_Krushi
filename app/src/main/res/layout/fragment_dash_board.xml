<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#71d687"
    android:orientation="vertical"
    tools:context="com.odishakrushi.Fragments.DashBoard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layoutAskQuestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcorner"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/talk_male"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/ask_question"
                android:textStyle="bold"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornerblue"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dashboard_ans"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/Answer"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layoutPurchaseSaleHireRepair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornerpeace"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dashboard_pshr"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/P_S_H_R_S"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutMyStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornerpurple"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dashboard_mystory"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/My_Story"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layoutOpenForum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornergreen"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dashboard_openforum"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Open_Forum"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutKnowledgeBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundedcornerblue"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/dashboard_kb"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textSize="13sp"
                android:text="@string/Knowledge_Bank"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/layoutMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/roundedcornerpurple"
        android:layout_weight="1"
        android:layout_margin="5dp"
        >
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dashboard_message"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Message"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutContactUs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/roundedcorneryblue2"
        android:layout_weight="1"
        android:layout_margin="5dp"
        >
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dashboard_contactus"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="13sp"
            android:text="@string/Contact_Us"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#fff"/>
    </LinearLayout>


</LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_ad"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitXY"/>


    </LinearLayout>
</LinearLayout>

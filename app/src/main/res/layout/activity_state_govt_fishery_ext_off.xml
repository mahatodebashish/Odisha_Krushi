<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#71d687"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:fitsSystemWindows="true"

                >
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"

                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                </android.support.design.widget.AppBarLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Post"
                        android:textSize="12sp"/>

                    <RadioGroup
                        android:id="@+id/rgFisheryPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minashree"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AFO"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />

                        <RadioButton

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Addl Fishery Officer"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            />



                    </RadioGroup>

                    <!--Farmer registration fields-->

                    <LinearLayout
                        android:id="@+id/farmerregdlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_border"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EXTENSION OFFICER AS FARMER"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="#fff"/>
                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/fathername"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:background="@drawable/rectangle_border"
                            android:hint="FATHER'S NAME (OPTIONAL)"
                            android:singleLine="true"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="CASTE"/>
                        <RadioGroup
                            android:id="@+id/radioGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SC"
                                android:textSize="15sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ST"
                                android:textSize="15sp"/>
                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GENERAL"
                                android:textSize="15sp"/>

                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="Irrigated land area under cultivation"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:background="@drawable/rectangle_border"
                            android:hint="area in acres"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:layout_marginTop="15dp"
                            android:text="Source Of Irrigation"/>

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dug Well"
                                android:textSize="14sp"/>


                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bore Well"
                                android:textSize="14sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="L1 Point"
                                android:textSize="14sp"/>
                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="River Lift"
                                android:textSize="14sp"/>

                            <RadioButton

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:textSize="14sp"/>

                        </RadioGroup>

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:text="Non irrigated Land area under cultivation"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="6dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:background="@drawable/rectangle_border"
                            android:hint="area"/>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="15sp"
                        android:text="@string/Jurisdiction"/>
                    <EditText
                        android:id="@+id/jurisdiction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_border"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:paddingLeft="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:text="@string/Select_District"/>
                    <Spinner
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:background="#bcbcbc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:text="@string/Select_Block"/>
                    <Spinner
                        android:id="@+id/block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:background="#bcbcbc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="12sp"
                        android:text="@string/GP"/>
                    <Spinner
                        android:id="@+id/gp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bcbcbc"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:text="@string/Expertise_In"/>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_border"
                        android:orientation="vertical">
                        <CheckBox
                            android:id="@+id/checkBox1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cultivation Practice"
                            android:gravity="center"
                            android:layout_margin="2dp"
                          />
                        <CheckBox
                            android:id="@+id/checkBox2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feed"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            />
                        <CheckBox
                            android:id="@+id/checkBox3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Disease"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            />
                        <CheckBox
                            android:id="@+id/checkBox4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Processing"

                            android:layout_margin="2dp"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <CheckBox
                                android:id="@+id/checkBoxPrawn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prawn"
                                android:textColor="#89210f"
                                android:gravity="center"
                                android:layout_margin="2dp"
                                />

                            <CheckBox
                                android:id="@+id/checkBoxFish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fish"
                                android:gravity="center"
                                android:textColor="#89210f"
                                android:layout_margin="2dp"
                                />
                            <CheckBox
                                android:id="@+id/checkBoxOthers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Others"
                                android:gravity="center"
                                android:textColor="#89210f"
                                android:layout_margin="2dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectangle_border"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/checkBox5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Training"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            />
                        <CheckBox
                            android:id="@+id/checkBox6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Insurance"

                            android:textSize="13sp"
                            android:gravity="center"

                            android:layout_margin="2dp"
                            />

                        <CheckBox
                            android:id="@+id/checkBox7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pond Management"

                            android:layout_margin="2dp"

                            android:gravity="center"
                            />
                        <CheckBox
                            android:id="@+id/checkBox8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Others"

                            android:textSize="13sp"
                            android:gravity="center"

                            android:layout_margin="2dp"
                            />


                        <EditText
                            android:id="@+id/expertise_in_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_border"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:hint="other expertise"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="10dp"
                            />
                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="bottom">

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:text="@string/Submit"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:onClick="onClickSubmit"

            />

    </LinearLayout>




</LinearLayout>
